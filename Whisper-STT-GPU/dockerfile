# Base image with Python 3.9 and CUDA support
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu20.04

# Set non-interactive mode for apt-get
ENV DEBIAN_FRONTEND=noninteractive

# Install Python and dependencies
RUN apt-get update && apt-get install -y \
    python3 python3-pip ffmpeg build-essential python3-dev tzdata \
    && rm -rf /var/lib/apt/lists/*

# Set Python3 as default
RUN ln -s /usr/bin/python3 /usr/bin/python

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install dependencies, specifying the correct PyTorch version with CUDA support
RUN pip install -r requirements.txt \
    && pip install torch==2.0.1+cu118 torchvision==0.15.2+cu118 -f https://download.pytorch.org/whl/torch_stable.html

# Install Whisper
RUN pip install openai-whisper

# Copy application code
COPY . .

# Expose the application port
EXPOSE 5001

# Run the app
CMD ["python", "stt_service.py"]
